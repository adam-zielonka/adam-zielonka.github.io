{
  "name": "adamzielonka.pro",
  "homepage": "https://adamzielonka.pro/",
  "dependencies": {
    "@craco/craco": "^5.7.0",
    "@types/jest": "^26.0.15",
    "@types/react": "^16.9.53",
    "classnames": "^2.2.6",
    "front-matter-loader": "^1.1.0",
    "json-loader": "^0.5.7",
    "mobx": "^6.0.1",
    "mobx-react-lite": "^3.0.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-scripts": "^3.4.3",
    "stylus": "^0.54.8",
    "stylus-loader": "^4.1.1",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "esm": "^3.2.25",
    "jest-canvas-mock": "^2.3.0",
    "jest-junit": "^12.0.0",
    "replace-in-file": "^6.1.0"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "test-coverage": "craco test --coverage --testResultsProcessor jest-junit",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint-fix": "eslint --ext .js,.jsx,.ts,.tsx . --fix",
    "lint-junit": "eslint --ext .js,.jsx,.ts,.tsx . -f junit > junit.xml",
    "postbuild": "node -r esm ./src/postBuild.js",
    "noscript": "cp ./public/index.html ./build/index.html && yarn postbuild"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest-junit": {
    "classNameTemplate": "{classname}",
    "titleTemplate": "{classname} {title}"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "coveragePathIgnorePatterns": [
      "src/serviceWorker.ts",
      "index.tsx"
    ],
    "coverageReporters": [
      "text",
      "cobertura",
      "clover",
      "lcov",
      "json"
    ]
  }
}

{
  "name": "adamzielonka.pro",
  "scripts": {
    "build": "rm -fr ./build && rollup -c && pnpm postbuild",
    "dev": "rollup -c -w",
    "start": "sirv public --no-clear",
    "serve": "sirv build --no-clear",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "postbuild": "cp -R public build && node -r esm ./src/postBuild.js",
    "format": "prettier --write ./src/**/*.{js,svelte,html,ts}",
    "lint": "eslint './src/**/*.{js,ts,svelte}'",
    "lint-junit": "eslint './src/**/*.{js,ts,svelte}' -f junit > eslint.xml",
    "lint:fix": "eslint --fix './src/**/*.{js,ts,svelte}'",
    "prelint": "pnpm run format"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tsconfig/svelte": "^2.0.0",
    "@types/marked": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "esm": "^3.2.25",
    "front-matter": "^4.0.2",
    "marked": "^4.0.8",
    "node-sass": "^7.0.0",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.1",
    "replace-in-file": "^6.1.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sass": "^1.45.1",
    "sirv-cli": "^1.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^2.0.0",
    "svelte-preprocess": "^4.0.0",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0"
  }
}
